<Window x:Class="WpfAppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppUI"
        mc:Ignorable="d" FontSize="20"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="First Name" Margin="5" />
                <TextBox x:Name="firstname" MinWidth="100" Margin="5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Last Name" Margin="5" />
                <TextBox x:Name="lastname" MinWidth="100" Margin="5" />
            </StackPanel>
            <Button x:Name="createEmployeeIDButton" Content="Geenrate Employee Id" Margin="5" Padding="10" Click="createEmployeeIDButton_Click" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Employee ID: " Margin="5" />
                <TextBlock x:Name="employeeID"  Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
